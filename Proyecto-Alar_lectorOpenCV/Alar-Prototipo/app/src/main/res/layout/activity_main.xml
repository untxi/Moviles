<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#303030"
    android:gravity="center"
    android:baselineAligned="false"
    tools:context="amysa.mobileproject.alar.alar.MainActivity" >


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/codeTest"
        android:layout_weight="0.06"
        android:hint="@string/codeInsert"
        android:textColorHint="@color/myCian"
        android:textColor="@color/myCian"
        android:layout_gravity="center"
        android:background="#303030"
        android:textSize="30dp" />

    <Space
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_weight="0.20"
        android:onClick="goCapture">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonScan"
            android:src="@mipmap/scan"
            android:background="#303030"
            android:layout_gravity="center"
            android:layout_weight="0.12" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scan"
            android:id="@+id/scanLabel"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:layout_weight="0.27" />

    </LinearLayout>
    <Space
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendResultBttn"
        android:layout_gravity="center"
        android:layout_weight="0.16"
        android:src="@mipmap/send"
        android:background="#303030"
        android:onClick="sendResult"
        android:clickable="true" />


</LinearLayout>