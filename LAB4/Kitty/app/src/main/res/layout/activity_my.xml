<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.adriana.kitty.MyActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugador"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal" />

    <TableLayout
            android:stretchColumns="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/activity_my_boton_arriba_izquierda"
                    android:layout_column="2"
                    android:background="@color/foreground_material_light"
                    android:drawableBottom="@drawable/casilla"
                    />

                <Button
                    android:background="@color/foreground_material_light"
                    android:id="@+id/activity_my_boton_arriba_medio"
                    android:layout_column="3"
                    android:drawableBottom="@drawable/casilla"/>

                <Button
                    android:id="@+id/activity_my_boton_arriba_derecha"
                    android:layout_column="4"
                    android:drawableBottom="@drawable/casilla"
                    android:background="@color/foreground_material_light"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/activity_my_boton_medio_izquierda"
                    android:layout_column="2"
                    android:drawableBottom="@drawable/casilla"
                    android:background="@color/foreground_material_light" />

                <Button
                    android:id="@+id/activity_my_boton_medio_medio"
                    android:layout_column="3"
                    android:drawableBottom="@drawable/casilla"
                    android:background="@color/foreground_material_light"
                    />

                <Button
                    android:id="@+id/activity_my_boton_medio_derecha"
                    android:layout_column="4"
                    android:drawableBottom="@drawable/casilla"
                    android:background="@color/foreground_material_light"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/activity_my_boton_bajo_izquierda"
                    android:layout_column="2"
                    android:drawableBottom="@drawable/casilla"
                    android:background="@color/foreground_material_light"/>
                <Button
                    android:id="@+id/activity_my_boton_bajo_medio"
                    android:layout_column="3"
                    android:drawableBottom="@drawable/casilla"
                    android:background="@color/foreground_material_light" />

                <Button
                    android:id="@+id/activity_my_boton_bajo_derecha"
                    android:layout_column="4"
                    android:drawableBottom="@drawable/casilla"
                    android:background="@color/foreground_material_light"/>
            </TableRow>

        </TableLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_vertical" />

</LinearLayout>
