            android:layout_alignStart=  "@+id/button5"
            android:layout_marginTop=  "52dp"
            android:id=  "@+id/button6"/>
        <Button
            android:text=  "Right"
            android:layout_width=  "wrap_content"
            android:layout_height=  "wrap_content"
            android:layout_below=  "@+id/button6"
